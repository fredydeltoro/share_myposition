@import 'nib/vendor'

vendor-prefixes ?= moz webkit o ms official 

header
	
	.logo
		position absolute
		left 46%
		top 10%
		width 90px
		
		img 
			width 82px
	
	.titular 
		margin 0 60px 0 70px
		position absolute
		left 35%
		top 60%
		
		.titulo 
			font-size 25px
			font-weight bold
			margin 0
			padding 0
			
section
	
	.login
		background white
		border-radius 5px
		box-shadow 0px 20px 30px rgba(0,0,0,0.2)
		text-align center
		color #999
		height 250px
		width 300px
		position absolute
		left 39%
		top 20%
		
		form 
			display block
			padding 5em
			position relative
			
			input
				border-radius 5px
				position absolute
				left 12%
				top 25%
				text-align center
				width 220px
				
			button 
				position absolute
				left 22%
				top 65%
				background #039cc4
				border 1px solid transparent
				border-radius 5px
				font-weight bold
				font-size 16px
				cursor pointer
				color white
				padding 5px 30px 5px 30px
				text-align center
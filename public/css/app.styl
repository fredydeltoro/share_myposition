@import 'nib/vendor'

vendor-prefixes ?= moz webkit o ms official 

header
	.logo
		float left
		position absolute
		top 25%
		width 90px
		
		img 
			width 82px
			
	.titular 
		margin 0 60px 0 70px
		position absolute
		left 5%
		top 35%
		
		.titulo 
			font-size 25px
			font-weight bold
			margin 0
			padding 0
			
	.user
		position absolute
		right 2%
		top 25%
		text-align center
		
		h2
			font-size 20px
			font-weight bold
			
		a 
			background #039cc4
			border 1px solid transparent
			border-radius 5px
			font-weight bold
			font-size 16px
			cursor pointer
			color white
			padding 5px 30px 5px 30px
			text-align center
			text-decoration none
			
section 
	.bienvenida
		background #7FA2B8
		color white
		font-weight bold
		height 90px
		text-align center
		
		h2
			margin 5px
			padding 0
			font-size 17px
		
		.lugar
			font-weight normal
			padding 0
			margin 0 0 10px 0
			
		a
			background #039cc4
			border 1px solid transparent
			border-radius 5px
			font-weight bold
			font-size 16px
			cursor pointer
			color white
			padding 5px 30px 5px 30px
			text-align center
			text-decoration none
			
	ul
		text-align center
		height 200px
		line-height 10px
		margin 0
		padding 0
		position absolute
		left 30%
		top 32%
		overflow-x auto
		white-space nowrap
		width 600px
		
		li 
			background white
			border-radius 5px
			box-shadow 20px 10px 30px rgba(0,0,0,0.2)
			display block
			text-align center
			height 200px
			
			a
				background #039cc4
				border 1px solid transparent
				border-radius 5px
				font-weight bold
				font-size 16px
				cursor pointer
				color white
				padding 5px 30px 5px 30px
				text-align center
				text-decoration none
				
			.top
				background #026781
				border-radius 5px
				height 50px
				
				h2 
					color white
					padding-top 15px
						
			.bottom 
				margin-top 10px
				p 
					color #999
					font-size 13px 
					padding 5px 
				span  
					font-weight bold